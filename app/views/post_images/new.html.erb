<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6 shadow-lg rounded px-0">
      <h5 class="text-dark bg-light p-4 mb-0">画像投稿フォーム</h5>
      <div class="p-4">
        <% if @post_image.errors.any? %>
          <div class="alert alert-danger" role="alert">
            <h6 class="alert-heading"><%= @post_image.errors.count %>件のエラーが発生しました</h6>
            <ul class="mb-0">
              <% @post_image.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <%= form_with model: @post_image, local: true do |f| %>
          <!-- 画像 -->
          <div class="mb-3">
            <label class="form-label fw-bold">画像</label>
            <%= f.file_field :image, accept: "image/*", class: "form-control" %>
          </div>

          <!-- ショップ名 -->
          <div class="mb-3">
            <label class="form-label fw-bold">ショップ名</label>
            <%= f.text_field :shop_name, class: "form-control", placeholder: "ショップ名を入力" %>
          </div>

          <!-- 説明 -->
          <div class="mb-3">
            <label class="form-label fw-bold">説明</label>
            <%= f.text_area :caption, rows: 3, class: "form-control", placeholder: "コメントを入力" %>
          </div>

          <!-- 送信ボタン -->
          <div class="d-grid mt-4">
            <%= f.submit "投稿", class: "btn btn-info btn-lg text-white" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>