<div class="container py-5">
  <% post_images.each do |post_image| %>
    <div class="card mb-4 shadow-sm mx-auto" style="max-width: 600px;">
      <%= link_to post_image_path(post_image.id) do %>
        <%= image_tag post_image.get_image, class: "card-img-top" %>
      <% end %>

      <div class="card-body">
        <div class="d-flex align-items-center mb-3">
          <%= image_tag post_image.user.get_profile_image(60, 60), class: "rounded-circle me-3 img-fluid" %>
          <strong><%= post_image.user.name %></strong>
        </div>

        <p class="mb-1"><strong>ショップ名：</strong><%= post_image.shop_name %></p>
        <p class="mb-2"><strong>説明：</strong><%= post_image.caption %></p>
        <p class="text-muted mb-0"><%= link_to "#{post_image.post_comments.count} コメント", post_image_path(post_image.id), class: "text-decoration-none text-dark" %></p>
      </div>
    </div>
  <% end %>

  <div class="d-flex justify-content-center mt-4">
    <%= paginate post_images %>
  </div>
</div>